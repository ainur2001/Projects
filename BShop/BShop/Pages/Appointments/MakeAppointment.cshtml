@page
@model BShop.Pages.Appointments.MakeAppointmentModel
@{
}

<div class="f_main mt-0">
    <div class="blur">
        <div class="pop_up_container">
            <div class="pop_up_body" id="pop_up_body">
                <p>Онлайн-запись</p>
                <form method="post">
                    <input type="text" placeholder="Имя" name="Name" required />
                    <input type="text" placeholder="Номер телефона" name="phoneNumber" required />
                    <select name="MasterName" required>
                        <option>Выбирете мастера</option>
                        <option value="Дмитрий Золотухин">Дмитрий Золотухин</option>
                        <option value="Зуля Хуснуллина">Зуля Хуснуллина</option>
                        <option value="Ирман Насибуллин">Ирман Насибуллин</option>
                    </select>
                    <input type="text" id="airdatepicker" class="form-control" name="DateOfHaircut" placeholder="Дата и время" value="@Model.appointment.DateOfHaircut" required autocomplete="off" />
                    <button type="submit">Отправить заявку</button>
                    <a class="btn" style="position: absolute; top: 15px; right: 15px; font-size: 21px; cursor: pointer;" href="/">✕</a>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/js/air-datepicker.js"></script>

<script>
    new AirDatepicker('#airdatepicker', {
        timepicker: true,
        minHours: 10,
        maxHours: 19,
        minutesStep: 15
    });
</script>